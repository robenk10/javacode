
package stringDay3;

public class Assignment5 
{

	public static void main(String[] args) 
	{
		String str1="robinkedari";
		int count=0;
		for(int i=0;i<str1.length();i++)
		{
			str1.charAt(i);

			count++;
		}
		System.out.println(count);
		/************************************************************************************************************************************************************/
		System.out.println("*************************************************************");
		String s1="ameya";
		int[] freq=new int[256];
		for(int i=0;i<s1.length();i++)
		{
			freq[(int)s1.charAt(i)]++;

			for(int j=0;j<freq.length;j++)
			{
				if(freq[j]!=0)
				{
					System.out.println((char)j+ "="+"ocuured of " +freq[j]+"=times");
				}

			}

		}
		System.out.println("****************************************************************");

		String s2="Robin";
		int count1=0;
		for(char c='A';c<='z';c++)
		{     
			count1=0;
			for(int i=0;i<s2.length();i++)
			{
				if(c==s2.charAt(i))
				{
					count1++;
					System.out.println(c+ " ocuures in word "+count1+"timess");
				}
			}
		}

 

		System.out.println("**************************************************");


		String st="pallavi";
	
		char[] ch=st.toCharArray();
		int counter=0;
		for(int m=0;m<ch.length;m++)
		{
			counter=0;
			for(char k='A';k<='z';k++)
			{
				if(ch[m]==k)
				{
					counter++;
					
				}
				
			}
			System.out.println(ch[m]+ " occures in String "+counter+"times");

		}

	}

}
